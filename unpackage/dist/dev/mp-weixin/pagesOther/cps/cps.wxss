page {
  background-color: #ffffff;
}
.xmapp {
  background: url(https://vkceyugu.cdn.bspapp.com/VKCEYUGU-65272445-af4b-4917-a15b-f95e0185a0a5/e42ad83a-5d4d-4dac-b4cc-3f9e72ad75f8.png) no-repeat center center;
  height: 160px;
  width: 100%;
  background-size: cover;
}
.container {
  font-size: 14px;
  position: relative;
  background: #f5f5f5;
}
.container .tabs {
  border-bottom: 1px solid #e2e2e2;
  color: #ffaa00;
}
.container .coupon {
  padding-bottom: 1rpx;
  margin-right: 4%;
  margin-left: 4%;
}
.container .coupon .item {
  background-color: #faf8f4;
  border-radius: 10rpx;
  padding: 3rpx 3rpx 3rpx 3rpx;
}
.container .u-wrap-container {
  margin: 1rpx;
  border-radius: 10rpx;
  padding: 0rpx 3rpx 3rpx 3rpx;
}
.popup-bg {
  background-color: #ffffff;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  padding: 0;
  margin: 0;
}
.popup {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}
.popup-view {
  margin-top: 30%;
  height: 100rpx;
  width: auto;
  display: flex;
  justify-content: space-between;
}
.popup-eat-what {
  border-radius: 20rpx;
  background-color: #E88E1D;
  margin-top: 30%;
  width: 70px;
  height: 26px;
  text-align: center;
  color: #E5E5E5;
  font-weight: bold;
}
.popup-more-bt {
  box-shadow: inset 0 2px 3px rgba(0, 0, 0, 0.07), 0 1px rgba(255, 255, 255, 0.5);
  margin-top: 100%;
  width: 100px;
  height: 40px;
  border-radius: 40rpx;
}
.popup-more-bt:hover {
  background: linear-gradient(90deg, #e4d93a, #ffaa00);
  box-shadow: inset 0 1px #ffe696, 0 2px 3px rgba(0, 0, 0, 0.2);
}
.popup-more-bt:active {
  background: linear-gradient(90deg, #e4d93a, #ffaa00);
  box-shadow: inset 0 1px #ffb050, 0 2px 3px rgba(0, 0, 0, 0.2);
}
.eleBtn {
  width: 100px;
  height: 100px;
  margin: 0 auto;
  padding: 5px;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.1);
  box-shadow: inset 0 2px 3px rgba(0, 0, 0, 0.07), 0 1px rgba(255, 255, 255, 0.5);
}
.eleBtn .inner {
  width: 100%;
  height: 100%;
  line-height: 80px;
  color: #ffffff;
  font-weight: bold;
  font-size: 15px;
  text-align: center;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  border-radius: 50%;
  border: 1px solid #e88e1d;
  background: linear-gradient(90deg, #e4d93a, #ffaa00);
  box-shadow: inset 0 1px #ffaa00, 0 2px 3px rgba(0, 0, 0, 0.2);
}
.eleBtn:hover .inner {
  background: linear-gradient(90deg, #e4d93a, #ffaa00);
  box-shadow: inset 0 1px #ffe696, 0 2px 3px rgba(0, 0, 0, 0.2);
}
.eleBtn:active .inner {
  background: linear-gradient(90deg, #e4d93a, #ffaa00);
  box-shadow: inset 0 1px #ffb050, 0 2px 3px rgba(0, 0, 0, 0.2);
}
.meituanBtn {
  width: 100px;
  height: 100px;
  margin: 0 auto;
  padding: 5px;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.1);
  box-shadow: inset 0 2px 3px rgba(0, 0, 0, 0.07), 0 1px rgba(255, 255, 255, 0.5);
}
.meituanBtn .inner {
  width: 100%;
  height: 100%;
  line-height: 80px;
  color: #ffffff;
  font-weight: bold;
  font-size: 15px;
  text-align: center;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  border-radius: 50%;
  border: 1px solid #e88e1d;
  background: linear-gradient(270deg, #ffba30, #e4d93a);
  box-shadow: inset 0 1px #ffd17c, 0 2px 3px rgba(0, 0, 0, 0.2);
}
.meituanBtn:hover .inner {
  background: linear-gradient(270deg, #ffce44, #e4d93a);
  box-shadow: inset 0 1px #ffe696, 0 2px 3px rgba(0, 0, 0, 0.2);
}
.meituanBtn:active .inner {
  background: linear-gradient(180deg, #ff911e, #e4d93a);
  box-shadow: inset 0 1px #ffb050, 0 2px 3px rgba(0, 0, 0, 0.2);
}
.desc {
  color: #515151;
  font-size: 28rpx;
  font-weight: bold;
}
.taobao {
  margin-top: 20rpx;
  width: 100%;
  background-color: #ffffff;
  padding: 20rpx 20rpx 20rpx 20rpx;
  border-bottom: 1px solid #ffffff;
  border-radius: 20rpx;
}
.taobao .title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  font-size: 30rpx;
}
.taobao .title .left {
  width: 50%;
  display: flex;
  align-items: center;
}
.taobao .title .left .store {
  font-weight: 500;
}
.taobao .title .left .buddha {
  width: 35rpx;
  height: 40rpx;
  border-radius: 10rpx;
  margin-right: 10rpx;
}
.taobao .title .text {
  width: 30%;
  height: 50%;
  line-height: 38rpx;
  text-align: center;
  font-size: 24rpx;
  background: linear-gradient(90deg, #ffd502, #ffaa00);
  border-radius: 6rpx;
  color: #ffffff;
  font-weight: bold;
}
.taobao .title .text .receiveNum {
  color: #ffffff;
}
.taobao .title .entrance {
  width: 20%;
  margin: 10rpx 10rpx;
  color: #909399;
  border: solid 2rpx #909399;
  line-height: 40rpx;
  padding: 0 10rpx;
  font-size: 24rpx;
  background: none;
  border-radius: 15px;
  text-align: center;
}
.taobao .ticket {
  display: flex;
}
.taobao .ticket .left {
  width: 70%;
  padding: 20rpx 20rpx;
  align-items: center;
  background-color: #f4f9ff;
  border-radius: 20rpx;
  border-right: dashed 2rpx #cbced0;
  display: flex;
}
.taobao .ticket .left .picture {
  width: 20%;
  border-radius: 10rpx;
}
.taobao .ticket .left .introduce {
  width: 80%;
  margin-left: 10rpx;
}
.taobao .ticket .left .introduce .top {
  color: #ff9900;
  font-size: 28rpx;
}
.taobao .ticket .left .introduce .top .big {
  font-size: 60rpx;
  font-weight: bold;
  margin-right: 10rpx;
}
.taobao .ticket .left .introduce .type {
  font-size: 28rpx;
  color: #82848a;
}
.taobao .ticket .left .introduce .date {
  margin-top: 10rpx;
  font-size: 20rpx;
  color: #82848a;
}
.taobao .ticket .right {
  width: 30%;
  padding: 20rpx 20rpx;
  background-color: #f4f9ff;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
}
.taobao .ticket .right .use {
  height: auto;
  padding: 0 20rpx;
  font-size: 24rpx;
  border-radius: 40rpx;
  color: #ffffff !important;
  background-color: #ff9900 !important;
  line-height: 40rpx;
  color: #758ea5;
  margin: auto;
}

