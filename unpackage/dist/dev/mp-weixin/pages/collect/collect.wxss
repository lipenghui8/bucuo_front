.tab {
  position: relative;
  border-radius: 32rpx;
  margin-right: 15rpx;
  margin-bottom: 15rpx;
}
.tab image {
  border-radius: 16rpx;
}
.tab .array {
  position: absolute;
  top: 15rpx;
  right: 15rpx;
  color: #FFFFFF;
  background-color: rgba(0, 0, 0, 0.4);
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  font-size: 12px;
}

