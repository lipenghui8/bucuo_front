.tag {
  font-size: 14px;
  background-color: #F5F6F8;
  color: #909399;
  border-radius: 40rpx;
  line-height: 52rpx;
  padding: 0 42rpx;
  text-align: center;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.tag-active {
  background-image: linear-gradient(100deg, #fcfc44, #f8c93c);
  color: #333333;
  box-shadow: 0px 0px 10px #fff8ab;
}

