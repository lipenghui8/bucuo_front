.tab {
  width: 33.33%;
  padding: 30rpx;
}
.top {
  width: 100vw;
  height: 460rpx;
  margin-top: -250rpx;
  padding-top: 250rpx;
  background-image: linear-gradient(100deg, #fce638, #f8c93c);
  position: fixed;
  top: 0;
}
.title {
  border-left: 6rpx solid #333333;
  padding-left: 15rpx;
  line-height: 28rpx;
  color: #333333;
  font-weight: 550;
}
.border-bottom {
  border-bottom: 1rpx solid #F3F3F3;
}
.relative {
  position: relative;
}
.bg-white {
  background-color: #FFFFFF;
}
.grid .tab {
  width: 33%;
  height: 180rpx;
}
.num {
  font-weight: 550;
  font-size: 48rpx;
  color: #ffb907;
}
.nums {
  color: #3a1300;
  font-size: 36rpx;
  font-weight: 550;
}
.utit {
  color: #3a1300;
}

