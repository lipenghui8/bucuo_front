.vtop {
  position: fixed;
  top: 0px;
  left: 0;
  width: 100%;
  z-index: 999999;
  height: 14%;
  background: linear-gradient(90deg, #ffb821 0, #ffcd33 45%, #ffd833);
}
.vtop .title {
  position: relative;
  color: #303030;
  font-size: 20px;
  line-height: 80rpx;
}
.vtop .fenxiang {
  margin-left: -20rpx;
  margin-top: -10px;
}
.vtop .search {
  width: 55%;
  background: #F3F4F5;
  height: 60rpx;
  margin: 20rpx 20rpx 20rpx 20rpx;
  padding-left: 20rpx;
  border-radius: 50px;
  margin-top: 1px;
}
.vtop .search text {
  color: #a6a7a8;
  font-size: 14px;
}
.vtop .div1 {
  height: 40rpx;
  width: 100%;
  background: #ffffff;
  border-radius: 30px 30px 0px 0px;
  position: absolute;
  bottom: 0px;
}
.vtop .div2 {
  height: 40rpx;
  width: 92%;
  background: #ffffffb0;
  border-radius: 10px 10px 0px 0px;
  position: absolute;
  bottom: 5px;
  left: 4%;
  right: 6%;
}
.vtop .div3 {
  height: 40rpx;
  width: 88%;
  background: #ffffff59;
  border-radius: 10px 10px 0px 0px;
  position: absolute;
  bottom: 10px;
  left: 6%;
  right: 8%;
}
.menu {
  position: fixed;
  left: 0;
  width: calc(100% - 40rpx);
  z-index: 99;
  background-color: #FFFFFF;
  border-bottom: 10px solid #FFFFFF;
  margin-top: 6%;
}
.menus {
  position: fixed;
  left: 0;
  z-index: 99;
  background-color: #FFFFFF;
}
.tags {
  font-size: 14px;
  background-color: #F5F6F8;
  color: #909399;
  border-radius: 30rpx;
  margin-right: 30rpx;
  line-height: 60rpx;
  padding: 0 60rpx;
  white-space: nowrap;
}
.tag-active {
  background: linear-gradient(90deg, #ffb821 0, #ffcd33 45%, #ffd833);
  color: #333333;
  box-shadow: 0px 0px 10px #fff8ab;
  -webkit-animation: tiaobig 0.8s ease-in-out alternate infinite;
          animation: tiaobig 0.8s ease-in-out alternate infinite;
  -webkit-animation-iteration-count: 1;
          animation-iteration-count: 1;
}
@-webkit-keyframes tiaobig {
0% {
    -webkit-transform: scale(0.98);
            transform: scale(0.98);
}
25% {
    -webkit-transform: scale(1.08);
            transform: scale(1.08);
}
50% {
    -webkit-transform: scale(0.94);
            transform: scale(0.94);
}
75% {
    -webkit-transform: scale(1.06);
            transform: scale(1.06);
}
100% {
    -webkit-transform: scale(1);
            transform: scale(1);
}
}
@keyframes tiaobig {
0% {
    -webkit-transform: scale(0.98);
            transform: scale(0.98);
}
25% {
    -webkit-transform: scale(1.08);
            transform: scale(1.08);
}
50% {
    -webkit-transform: scale(0.94);
            transform: scale(0.94);
}
75% {
    -webkit-transform: scale(1.06);
            transform: scale(1.06);
}
100% {
    -webkit-transform: scale(1);
            transform: scale(1);
}
}
.tab {
  position: relative;
  width: 215rpx;
  height: 350rpx;
  border-radius: 16rpx;
  margin-right: 15rpx;
  margin-bottom: 15rpx;
}
.tab image {
  border-radius: 16rpx;
  display: block;
}
.tab .array {
  position: absolute;
  top: 18rpx;
  right: 0rpx;
  color: #FFFFFF;
  background-color: rgba(0, 0, 0, 0.4);
  padding: 0rpx 12rpx 0 16rpx;
  border-radius: 20rpx 0 0 20rpx;
  font-size: 12px;
}
.back {
  position: fixed;
  right: -80rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
  padding: 8rpx;
  box-shadow: 0 0px 16px rgba(0, 0, 0, 0.2);
  transition-property: right;
  transition-duration: 0.6s;
}
.back image {
  display: block;
}
.back .text {
  font-size: 14px;
}
.backSearch {
  bottom: 300rpx;
  background-color: #21222385;
}
.backSearch .text {
  color: #FFFFFF;
}
.backTop {
  bottom: 200rpx;
  background-color: #21222385;
}
.backTop .text {
  color: #fff;
}
.backTop_show {
  right: 20rpx !important;
}
.backTop_hide {
  right: -80rpx !important;
}
