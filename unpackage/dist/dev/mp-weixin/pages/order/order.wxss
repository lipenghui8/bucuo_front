@charset "UTF-8";
/**
 * 下方引入的为uView UI的集成样式文件，为scss预处理器，其中包含了一些"u-"开头的自定义变量
 * uView自定义的css类名和scss变量，均以"u-"开头，不会造成冲突，请放心使用 
 */
.menu {
  position: fixed;
  left: 0;
  width: calc(100% - 60rpx);
  z-index: 99;
  background-color: #FFFFFF;
}
.tags {
  font-size: 14px;
  background-color: #F5F6F8;
  color: #909399;
  border-radius: 40rpx;
  line-height: 60rpx;
  padding: 0 40rpx;
}
.tag-active {
  background-image: linear-gradient(100deg, #fcfc44, #f8c93c);
  color: #333333;
  box-shadow: 0px 0px 10px #fff8ab;
  -webkit-animation: tiaobig 0.8s ease-in-out alternate infinite;
          animation: tiaobig 0.8s ease-in-out alternate infinite;
  -webkit-animation-iteration-count: 1;
          animation-iteration-count: 1;
}
@-webkit-keyframes tiaobig {
0% {
    -webkit-transform: scale(0.98);
            transform: scale(0.98);
}
25% {
    -webkit-transform: scale(1.08);
            transform: scale(1.08);
}
50% {
    -webkit-transform: scale(0.94);
            transform: scale(0.94);
}
75% {
    -webkit-transform: scale(1.06);
            transform: scale(1.06);
}
100% {
    -webkit-transform: scale(1);
            transform: scale(1);
}
}
@keyframes tiaobig {
0% {
    -webkit-transform: scale(0.98);
            transform: scale(0.98);
}
25% {
    -webkit-transform: scale(1.08);
            transform: scale(1.08);
}
50% {
    -webkit-transform: scale(0.94);
            transform: scale(0.94);
}
75% {
    -webkit-transform: scale(1.06);
            transform: scale(1.06);
}
100% {
    -webkit-transform: scale(1);
            transform: scale(1);
}
}
.tab {
  position: relative;
  margin-right: 15rpx;
  margin-bottom: 15rpx;
}
.tab image {
  border-radius: 16rpx;
}

