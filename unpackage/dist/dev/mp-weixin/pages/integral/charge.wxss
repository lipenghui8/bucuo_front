.top image {
  width: 120rpx;
  height: 120rpx;
}
.top .kapian {
  height: 240rpx;
  margin: -60rpx 40rpx 0 40rpx;
  background: linear-gradient(to bottom right, #6cb3ff, #866BF1);
  color: #FFFFFF;
  border-radius: 36rpx;
  box-shadow: 0px 10px 20px #a2beff;
}
.top .kapian .price {
  font-size: 32px;
  font-weight: 700;
}
.top .kapian .shuom {
  color: #E5E5E5;
}
.title {
  border-left: 6rpx solid #648af1;
  padding-left: 15rpx;
  line-height: 34rpx;
  color: #808080;
}
.charge .tab {
  text-align: center;
  box-shadow: 0px 4px 12px #e4edff;
  border-radius: 12rpx;
  width: 210rpx;
  margin-bottom: 20rpx;
}
.charge .tab .price {
  font-size: 20px;
  color: #866BF1;
  font-weight: bold;
}
.charge .tab .num {
  padding: 0 3rpx;
}
.charge .tab .shuom {
  color: #A8A8A8;
}
.pay image {
  width: 60rpx;
  height: 60rpx;
}
.pay_active {
  background: linear-gradient(to bottom right, #6cb3ff, #866BF1);
}
.pay_active .price {
  color: #FFFFFF !important;
}
.pay_active .num {
  color: #FFFFFF !important;
}
.pay_active .shuom {
  color: #e8e8e8 !important;
}
.btn {
  font-size: 16px;
  background: linear-gradient(to bottom right, #6cb3ff, #866BF1);
  box-shadow: 0px 6px 12px #cadbff;
  color: #FFFFFF;
  border-radius: 40rpx;
  line-height: 86rpx;
  text-align: center;
}
.hover-class {
  -webkit-transform: scale(0.92);
          transform: scale(0.92);
  transition: all 0.2s;
}

